{
  "name": "INFO-CELL",
  "version": "1.0.1",
  "description": "INFO-CELL",
  "main": "./out/main/index.js",
  "author": "http://INFO-CELL.co.kr/",
  "homepage": "http://INFO-CEL.co.kr/",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev --watch",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config"
  },
  "build": {
    "productName": "INFO-CELL",
    "appId": "com.electron.INFO-CELL",
    "asar": true,
    "win": {
      "icon": "./build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "installerIcon": "./build/icon.ico",
      "shortcutName": "INFO-CELL",
      "artifactName": "INFO-CELL-${version}.${ext}",
      "uninstallDisplayName": "INFO-CELL"
    },
    "directories": {
      "buildResources": "./build/",
      "output": "./dist/",
      "app": "."
    }
  },
  "dependencies": {
    "@electron-toolkit/preload": "^1.0.3",
    "@electron-toolkit/utils": "^1.0.2",
    "@electron/remote": "^2.0.9",
    "@types/lodash-es": "^4.17.7",
    "better-sqlite3": "^9.4.0",
    "electron-updater": "^5.3.0",
    "lodash-es": "^4.17.21",
    "serialport": "^11.0.0",
    "ts-node": "^10.9.1",
    "electron-vite": "^1.0.21",
    "vue-router": "^4.2.0",
    "vue-toastification": "2.0.0-rc.2"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^1.2.3",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/node": "16.18.21",
    "@vitejs/plugin-vue": "^4.1.0",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.36.0",
    "eslint-plugin-vue": "^9.10.0",
    "less": "^4.1.3",
    "postcss": "^8.4.23",
    "prettier": "^2.8.7",
    "tailwindcss": "^3.3.2",
    "typescript": "^4.9.5",
    "vite": "^4.2.1",
    "vue": "^3.2.47",
    "vue-tsc": "^1.2.0",
    "electron-builder": "^24.4.0",
    "electron": "^22.3.4"
  }
}
